{
  "name": "yds-words-chaos-tests",
  "version": "1.0.0",
  "description": "Chaos Engineering Test Suite for YDS Words Application",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:chaos": "jest --testNamePattern='Chaos'",
    "test:network": "jest --testNamePattern='Network'",
    "test:security": "jest --testNamePattern='XSS|Security'"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
